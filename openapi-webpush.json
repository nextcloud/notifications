                                            "type": "object",
                                            "required": [
                                                "ocs"
                                            ],
                                            "properties": {
                                                "ocs": {
                                                    "type": "object",
                                                    "required": [
                                                        "meta",
                                                        "data"
                                                    ],
                                                    "properties": {
                                                        "meta": {
                                                            "$ref": "#/components/schemas/OCSMeta"
                                                        },
                                                        "data": {}
                                                    }
                                                }
                                            }
                                        },
                                        {
                                            "type": "object",
                                            "required": [
                                                "ocs"
                                            ],
                                            "properties": {
                                                "ocs": {
                                                    "type": "object",
                                                    "required": [
                                                        "meta",
                                                        "data"
                                                    ],
                                                    "properties": {
                                                        "meta": {
                                                            "$ref": "#/components/schemas/OCSMeta"
                                                        },
                                                        "data": {}
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Activating subscription is not possible, may be because of a wrong activation token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "required": [
                                        "ocs"
                                    ],
                                    "properties": {
